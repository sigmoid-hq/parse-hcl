{
  "terraform": [
    {
      "required_version": ">= 1.6.0"
    }
  ],
  "provider": {
    "aws": {
      "region": "us-west-2"
    }
  },
  "variable": {
    "project": {
      "type": "string",
      "default": "demo"
    }
  },
  "locals": {
    "name_prefix": "${var.project}-json"
  },
  "resource": {
    "aws_s3_bucket": {
      "artifact": [
        {
          "bucket": "${local.name_prefix}-artifact"
        }
      ]
    }
  },
  "output": {
    "bucket_id": {
      "value": "${aws_s3_bucket.artifact.id}"
    }
  }
}
