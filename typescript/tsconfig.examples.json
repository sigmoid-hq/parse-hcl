{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "types": ["node"],
        "outDir": "dist/examples",
        "rootDir": "examples",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": false,
        "skipLibCheck": true
    },
    "include": ["examples/**/*"],
    "exclude": ["dist", "node_modules"]
}
